    <h1>Story Compass</h1>

    <div class="category-selector">
        <button class="cat-btn active" onclick="setCategory('adventureNoun')">Adventure Noun</button>
        <button class="cat-btn" onclick="setCategory('funNoun')">Fun Noun</button>
        <button class="cat-btn" onclick="setCategory('action')">Action (Verb)</button>
        <button class="cat-btn" onclick="setCategory('adj')">Description</button>
    </div>

    <div class="compass-container">
        <div class="result-text" id="result">...</div>
    </div>

    <button class="spin-btn" onclick="spin()">SPIN</button>

    <script>
        // Data extracted directly from Spinners.pdf
